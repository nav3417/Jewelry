
@{
    ViewBag.Title = "create";
    Layout = "~/Views/Shared/_Adminlayout.cshtml";
}

<h3 class="h3">Add Product</h3>
<div class="container-fluid">
    @using (Html.BeginForm("create", "products", FormMethod.Post, new { id = "prodForm", enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            <label for="Name">Product Name:</label>
            @Html.TextBox("name", null, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="price">Price:</label>
            @Html.TextBox("price", null, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="Releasedate">Realease Date:</label>
            @Html.TextBox("Releasedate", null, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="category">Category:</label>
            <div class="form-inline">
                <div>
                    @Html.DropDownList("category", (IEnumerable<SelectListItem>)ViewBag.Category, "- Select-Category", new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="types">Types:</label>
            <div class="form-inline">
                <div>
                    @Html.DropDownList("types", (IEnumerable<SelectListItem>)ViewBag.Types, "- Select-Type", new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="Color">Color:</label>
            <div class="form-inline">
                <div>
                    @Html.DropDownList("Color", (IEnumerable<SelectListItem>)ViewBag.Color, "- Select-Color", new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            @Html.TextArea("description", null, new {row="20", @class = "form-control" })
        </div>
        <h5>Add Pics</h5>
        <input id="image1" name="image1" type="file" />
        <div style="margin-top:10px">
            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
            <button type="reset" class="btn btn-danger"><span class="glyphicon glyphicon-certificate"></span> Reset</button>
        </div>
    }
</div>

