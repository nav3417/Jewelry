@using JewelryUI.Models
@{
    ViewBag.Title = "Product Detail";
    ProductDetailModel products = ViewBag.products;
}
<link href="~/Content/main.css" rel="stylesheet" />
 <div class="modal fade" id="productbyid" style="height:400px">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" style="color:red">
               <a href="/users/checkuser"><input type="button" class="btn btn-primary pull-right" value="Close"/></a>
                <div class="modal-title" id="title" style="text-align:center">@ViewBag.Title</div>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <table class="table-bordered table-responsive">
                            <thead>
                                <tr>
                                    <th class="col-lg-1">Name</th>
                                    <th class="col-lg-1">Price</th>
                                    <th class="col-lg-1">Type</th>
                                    <th class="col-lg-1">Category</th>
                                    <th class="col-lg-1">Color</th>
                                    <th class="col-lg-1">Image</th>
                                    <th class="col-lg-2">Stock In Date</th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td>@products.Name</td>
                                    <td>@products.Price</td>
                                    <td>@products.type</td>
                                    <td>@products.Category</td>
                                    <td>@products.Color</td>
                                    <td><img src="@Url.Content(products.ImageUrl)" style="width:50px;height:50px" /></td>
                                    <td>@products.ReleaseDate</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <br /><br />
                    <div class="col-lg-12">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>@products.Description</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
            </div>
        </div>
    </div>
</div>
 </div>
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script type="text/javascript">
        $(function () {
            $("#productbyid").modal();
            $("#productbyid").click(function () {
                $.ajax(
                    {
                        url: "/Home/Index/",
                        type: "get"
                    }
                   )
            })

        });
</script>

