
@{
    ViewBag.Title = "Index";
}

<div class="container">
        @using (Html.BeginForm("index", "order", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
                <div style="clear:both"></div>
                <div class="form-group">
                   <label for="cellno">Your Name:</label>
                   @Html.TextBox("name", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="cellno">Cell No</label>
                    @Html.TextBox("cellno", null, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="city">Select City:</label>
                    <div class="form-inline">
                    <div style="float:left;padding-right:5px">
                    @Html.DropDownList("city", (IEnumerable<SelectListItem>)ViewBag.cities, "- Cities -", new { @class = "form-control" })
                </div>
                    </div>
                </div>
                <div style="clear:both"></div>
                <div class="form-group">
                    <label for="adress">Adress:</label>
                    @Html.TextBox("adress", null, new { @class = "form-control" })
                </div>
                <div style="margin-top:10px">
                    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
                </div>
    }
</div>

